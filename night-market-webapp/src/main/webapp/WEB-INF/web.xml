<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.nightmarket.webapp.filter.EncodingFilter</filter-class>
    </filter>
  <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
  <display-name>night-market-webapp</display-name>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>ApiHealthServlet</servlet-name>
    <servlet-class>com.nightmarket.webapp.servlet.ApiHealthServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ApiHealthServlet</servlet-name>
    <url-pattern>/api/health</url-pattern>
  </servlet-mapping>
</web-app>

